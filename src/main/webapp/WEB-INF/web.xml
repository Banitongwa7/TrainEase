<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xmlns="http://java.sun.com/xml/ns/javaee"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		 version="3.0">



	<!-- Login page -->
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>

	<!-- Servlet Mapping -->
	<servlet>
		<servlet-name>indexServlet</servlet-name>
		<jsp-file>/index.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>indexServlet</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>addUserServlet</servlet-name>
		<jsp-file>/addUser.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>addUserServlet</servlet-name>
		<url-pattern>/addUser</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UsersListServlet</servlet-name>
		<jsp-file>/UsersList.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>UsersListServlet</servlet-name>
		<url-pattern>/UsersList</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>ProfilServlet</servlet-name>
		<jsp-file>/profil.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>ProfilServlet</servlet-name>
		<url-pattern>/profil</url-pattern>
	</servlet-mapping>



</web-app>
